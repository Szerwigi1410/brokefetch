# Maintainer: Oliwier <szerwigi14@gmail.com>
pkgname=brokefetch-beta
pkgver=2025.08.14.ra126135
pkgrel=1
pkgdesc="A broken neofetch clone script üíÄ (beta version)"
arch=('any')
url="https://github.com/Szerwigi1410/brokefetch"
license=('MIT')
depends=('bash')
source=()
sha256sums=()

# Nuke old built packages right away
rm -f "$PWD"/*.pkg.tar.*

pkgver() {
    # Get latest commit hash
    local hash
    hash=$(git ls-remote "$url" HEAD | cut -f1 | cut -c1-7)

    # Get latest commit date in YYYY.MM.DD format
    local date
    date=$(curl -s "https://api.github.com/repos/Szerwigi1410/brokefetch/commits" \
        | grep '"date"' \
        | head -n 1 \
        | cut -d'"' -f4 \
        | cut -d'T' -f1 \
        | tr - .)

    echo "${date}.r${hash}"
}

prepare() {
    echo "üßπ Removing old beta script..."
    rm -f "$srcdir/brokefetch_beta.sh"

    echo "‚¨áÔ∏è Fetching latest brokefetch_beta.sh..."
    curl -L "https://raw.githubusercontent.com/Szerwigi1410/brokefetch/main/brokefetch_beta.sh" \
        -o "$srcdir/brokefetch_beta.sh"
}

package() {
    install -Dm755 "$srcdir/brokefetch_beta.sh" "$pkgdir/usr/bin/brokefetch-beta"
}

